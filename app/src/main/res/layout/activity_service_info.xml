<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:fillViewport="true">

    <RelativeLayout
        style="@style/RelativeLayout"
        android:layout_width="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_toolbar"
            style="@style/MatchWrap">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar" />

            <ImageView
                android:id="@+id/iv_arrow_back"
                style="@style/ImageViewArrowBack" />

            <ImageView
                style="@style/ImageViewToolbar"
                android:src="@drawable/ic_service_info" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            style="@style/StyleCardView"
            android:layout_below="@id/layout_toolbar"
            android:layout_marginBottom="@dimen/base_pow_four">

            <GridLayout
                style="@style/MatchWrap"
                android:columnCount="2"
                android:rowCount="9">

                <androidx.cardview.widget.CardView
                    style="@style/CardViewImageView"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_photo"
                        style="@style/ImageViewPhoto" />

                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/TextViewLargeApplicationSub"
                    android:text="@string/date_time" />

                <TextView
                    android:id="@+id/tv_date_time"
                    style="@style/TextViewLargeApplicationSub"
                    android:layout_gravity="end"
                    android:text="@string/date_time"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    style="@style/TextViewLargeApplicationSub"
                    android:text="@string/full_name" />

                <TextView
                    android:id="@+id/tv_full_name"
                    style="@style/TextViewLargeApplicationSub"
                    android:layout_gravity="end"
                    android:text="@string/full_name"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    style="@style/TextViewLargeApplicationSub"
                    android:text="@string/service" />

                <TextView
                    android:id="@+id/tv_service"
                    style="@style/TextViewLargeApplicationSub"
                    android:layout_gravity="end"
                    android:text="@string/service"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    style="@style/TextViewLargeApplicationSub"
                    android:text="@string/phone" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/TextViewLargeApplicationSub"
                    android:layout_gravity="end"
                    android:text="@string/phone"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    style="@style/TextViewLargeApplicationSub"
                    android:text="@string/location" />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/TextViewLargeApplicationSub"
                    android:layout_gravity="end"
                    android:text="@string/location"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    style="@style/TextViewLargeApplicationSub"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/vehicle_registration" />

                <TextView
                    android:id="@+id/tv_vehicle_registration"
                    style="@style/TextViewLargeApplicationSub"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/vehicle_registration"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    style="@style/TextViewLargeApplicationSub"
                    android:text="@string/price" />

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/TextViewLargeApplicationSub"
                    android:layout_gravity="end"
                    android:text="@string/price"
                    android:textStyle="bold" />

            </GridLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>
