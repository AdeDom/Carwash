<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingBottom="@dimen/base_hundred">

    <RelativeLayout
        style="@style/RelativeLayout"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_toolbar"
            style="@style/MatchWrap">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar" />

            <ImageView
                android:id="@+id/iv_arrow_back"
                style="@style/ImageViewArrowBack" />

            <ImageView
                style="@style/ImageViewToolbar"
                android:src="@drawable/ic_service" />

        </RelativeLayout>

        <GridLayout
            android:id="@+id/layout_before_service"
            style="@style/WrapWrap"
            android:layout_below="@id/layout_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/base_pow_four"
            android:columnCount="2"
            android:rowCount="3">

            <TextView
                style="@style/TextViewMediumGray"
                android:layout_columnSpan="2"
                android:layout_marginStart="@dimen/base_pow_four"
                android:text="@string/photo_service_from_all_4_sides" />

            <androidx.cardview.widget.CardView style="@style/StyleCardViewService">

                <TextView
                    style="@style/TextViewLargeApplication"
                    android:text="@string/front"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/base_pow_five">

                    <ImageView
                        android:id="@+id/iv_image_front_before"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_camera_front_before"
                        android:layout_width="@dimen/base_fifty"
                        android:layout_height="@dimen/base_fifty"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_blue" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_remove_front_before"
                        style="@style/CardViewRemoveImage"
                        android:layout_alignEnd="@id/iv_image_front_before">

                        <ImageView
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_remove_blue" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/progress_bar_front_before"
                        style="@style/ProgressBar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StyleCardViewService">

                <TextView
                    style="@style/TextViewLargeApplication"
                    android:text="@string/back"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/base_pow_five">

                    <ImageView
                        android:id="@+id/iv_image_back_before"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_camera_back_before"
                        android:layout_width="@dimen/base_fifty"
                        android:layout_height="@dimen/base_fifty"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_blue" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_remove_back_before"
                        style="@style/CardViewRemoveImage"
                        android:layout_alignEnd="@id/iv_image_back_before">

                        <ImageView
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_remove_blue" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/progress_bar_back_before"
                        style="@style/ProgressBar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StyleCardViewService">

                <TextView
                    style="@style/TextViewLargeApplication"
                    android:text="@string/left"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/base_pow_five">

                    <ImageView
                        android:id="@+id/iv_image_left_before"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_camera_left_before"
                        android:layout_width="@dimen/base_fifty"
                        android:layout_height="@dimen/base_fifty"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_blue" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_remove_left_before"
                        style="@style/CardViewRemoveImage"
                        android:layout_alignEnd="@id/iv_image_left_before">

                        <ImageView
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_remove_blue" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/progress_bar_left_before"
                        style="@style/ProgressBar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StyleCardViewService">

                <TextView
                    style="@style/TextViewLargeApplication"
                    android:text="@string/right"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/base_pow_five">

                    <ImageView
                        android:id="@+id/iv_image_right_before"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_camera_right_before"
                        android:layout_width="@dimen/base_fifty"
                        android:layout_height="@dimen/base_fifty"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_blue" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_remove_right_before"
                        style="@style/CardViewRemoveImage"
                        android:layout_alignEnd="@id/iv_image_right_before">

                        <ImageView
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_remove_blue" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/progress_bar_right_before"
                        style="@style/ProgressBar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <GridLayout
            android:id="@+id/layout_after_service"
            style="@style/WrapWrap"
            android:layout_below="@id/layout_before_service"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/base_pow_four"
            android:columnCount="2"
            android:rowCount="3">

            <TextView
                style="@style/TextViewMediumGray"
                android:layout_columnSpan="2"
                android:layout_marginStart="@dimen/base_pow_four"
                android:text="@string/photo_service_from_all_4_sides" />

            <androidx.cardview.widget.CardView style="@style/StyleCardViewService">

                <TextView
                    style="@style/TextViewLargeApplication"
                    android:text="@string/front"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/base_pow_five">

                    <ImageView
                        android:id="@+id/iv_image_front_after"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_camera_front_after"
                        android:layout_width="@dimen/base_fifty"
                        android:layout_height="@dimen/base_fifty"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_blue" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_remove_front_after"
                        style="@style/CardViewRemoveImage"
                        android:layout_alignEnd="@id/iv_image_front_after">

                        <ImageView
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_remove_blue" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/progress_bar_front_after"
                        style="@style/ProgressBar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StyleCardViewService">

                <TextView
                    style="@style/TextViewLargeApplication"
                    android:text="@string/back"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/base_pow_five">

                    <ImageView
                        android:id="@+id/iv_image_back_after"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_camera_back_after"
                        android:layout_width="@dimen/base_fifty"
                        android:layout_height="@dimen/base_fifty"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_blue" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_remove_back_after"
                        style="@style/CardViewRemoveImage"
                        android:layout_alignEnd="@id/iv_image_back_after">

                        <ImageView
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_remove_blue" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/progress_bar_back_after"
                        style="@style/ProgressBar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StyleCardViewService">

                <TextView
                    style="@style/TextViewLargeApplication"
                    android:text="@string/left"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/base_pow_five">

                    <ImageView
                        android:id="@+id/iv_image_left_after"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_camera_left_after"
                        android:layout_width="@dimen/base_fifty"
                        android:layout_height="@dimen/base_fifty"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_blue" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_remove_left_after"
                        style="@style/CardViewRemoveImage"
                        android:layout_alignEnd="@id/iv_image_left_after">

                        <ImageView
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_remove_blue" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/progress_bar_left_after"
                        style="@style/ProgressBar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/StyleCardViewService">

                <TextView
                    style="@style/TextViewLargeApplication"
                    android:text="@string/right"
                    android:textColor="@color/colorAccent" />

                <RelativeLayout
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/base_pow_five">

                    <ImageView
                        android:id="@+id/iv_image_right_after"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_camera_right_after"
                        android:layout_width="@dimen/base_fifty"
                        android:layout_height="@dimen/base_fifty"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_blue" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_remove_right_after"
                        style="@style/CardViewRemoveImage"
                        android:layout_alignEnd="@id/iv_image_right_after">

                        <ImageView
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_remove_blue" />

                    </androidx.cardview.widget.CardView>

                    <ProgressBar
                        android:id="@+id/progress_bar_right_after"
                        style="@style/ProgressBar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <RelativeLayout
            android:id="@+id/layout_other_image_service"
            android:layout_width="@dimen/base_four_hundred"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_after_service"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/base_pow_five"
            android:layout_marginEnd="@dimen/base_pow_five"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/other_head"
                style="@style/MatchWrap"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TextViewMediumGray"
                    android:text="@string/other_related_images" />

                <RelativeLayout style="@style/WrapWrap">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_add_other_image"
                        style="@style/WrapWrap"
                        android:layout_margin="@dimen/base_pow_three"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="@dimen/base_pow_two">

                        <ImageView
                            android:id="@+id/iv_add_other_image"
                            style="@style/MatchMatch"
                            android:src="@drawable/ic_add_blue" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_maximum_other_image"
                        style="@style/WrapWrap"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/base_pow_three"
                        android:text="@string/maximum_5_images"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="@dimen/text_small"
                        android:visibility="invisible" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@id/other_head"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/item_other_image_service" />

            <ProgressBar
                android:id="@+id/progress_bar_other_image"
                style="@style/ProgressBar" />

        </RelativeLayout>

        <LinearLayout
            style="@style/LinearLayoutButtonPair"
            android:layout_below="@+id/layout_other_image_service"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="@dimen/base_pow_four">

            <androidx.cardview.widget.CardView style="@style/CardViewButtonPair">

                <Button
                    android:id="@+id/bt_report"
                    style="@style/ButtonWhiteShort"
                    android:text="@string/report" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/CardViewButtonPair">

                <Button
                    android:id="@+id/bt_payment"
                    style="@style/ButtonBlueShort"
                    android:text="@string/payment" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/ProgressBar" />

    </RelativeLayout>

</ScrollView>
