<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RelativeLayout">

    <RelativeLayout
        android:id="@+id/layout_toolbar"
        style="@style/MatchWrap">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MatchWrap"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/iv_arrow_back"
            style="@style/ImageViewArrowBack" />

        <ImageView
            style="@style/ImageViewToolbar"
            android:src="@drawable/ic_change_profile" />

    </RelativeLayout>

    <LinearLayout
        style="@style/LinearLayoutVertical"
        android:layout_below="@+id/layout_toolbar">

        <RelativeLayout
            style="@style/WrapWrap"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_photo"
                style="@style/ImageViewPhoto" />

            <ImageView
                android:id="@+id/iv_camera"
                style="@style/ImageViewCamera"
                android:layout_alignEnd="@+id/iv_photo"
                android:layout_alignBottom="@+id/iv_photo" />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayout"
            android:layout_marginTop="@dimen/base_pow_four">

            <EditText
                android:id="@+id/et_full_name"
                style="@style/MatchMatch"
                android:background="@drawable/shape_et"
                android:drawableStart="@drawable/ic_person_gray"
                android:hint="@string/full_name" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

            <EditText
                android:id="@+id/et_identity_card"
                style="@style/MatchMatch"
                android:background="@drawable/shape_et"
                android:drawableStart="@drawable/ic_identity_card"
                android:hint="@string/identity_card"
                android:inputType="number"
                android:maxLength="13" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayout">

            <EditText
                android:id="@+id/et_phone"
                style="@style/MatchMatch"
                android:background="@drawable/shape_et"
                android:drawableStart="@drawable/ic_phone_gray"
                android:hint="@string/phone"
                android:inputType="phone"
                android:maxLength="10" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutButtonPair">

        <Button
            android:id="@+id/bt_cancel"
            style="@style/ButtonWhiteShort"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/bt_confirm"
            style="@style/ButtonBlueShort"
            android:layout_marginStart="@dimen/base_pow_three"
            android:text="@string/confirm" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressBar" />

</RelativeLayout>